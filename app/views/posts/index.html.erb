<h1><%= t('.title') %></h1>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Новая статья', new_admin_post_path, class: 'btn btn-outline-primary btn-sm' %>
<% end %>

<!-- # будет использовать код итирации из _post.html.erb удобство в том, что нам не нужно там указывать цикл -->
<!-- обернем вывод наших статей в дополнительную секцию -->
<section id ='posts'>
	<%= render @posts %>
</section>

<!-- render page links in the view: также дополнительно подключим класс из initialis/bootstrap_pagination_helper.rb -->
<%= will_paginate @posts, renderer: 'BootstrapPaginationHelper::LinkRenderer' %>